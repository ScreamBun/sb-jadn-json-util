{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.book_or_movie_min_max_1",
  "$ref": "#/definitions/Book-Or-Movie",
  "type": "object",
  "additionalProperties": false,
  "properties": {},
  "definitions": {
    "Book-Or-Movie": {
      "title": "Book Or Movie",
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 1,
      "properties": {
        "book": {
          "$ref": "#/definitions/Book",
          "description": ""
        },
        "movie": {
          "$ref": "#/definitions/Movie",
          "description": ""
        }
      }
    },
    "Book": {
      "title": "Book",
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 1,
      "properties": {
        "author": {
          "type": "string",
          "maxLength": 255
        },
        "content": {
          "type": "array",
          "maxItems": 100,
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Movie": {
      "title": "Movie",
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 1,
      "properties": {
        "director": {
          "type": "string",
          "maxLength": 255
        },
        "content_link": {
          "type": "string",
          "maxLength": 255,
          "pattern": "^[a-z][A-Z][0-9].-/$"
        }
      }
    }
  }
}